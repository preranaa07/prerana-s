{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Grid",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}

<style>
  .custom-grid {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }
  .custom-grid h2 {
    text-align: center;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 3rem;
  }
  .custom-grid .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill,minmax(280px,1fr));
    gap: 2rem;
  }
  .custom-grid .card {
    border: 1px solid #e5e5e5;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: box-shadow 0.3s ease;
    text-align: center;
  }
  .custom-grid .card:hover {
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }
  .custom-grid .card img {
    width: 100%;
    height: 280px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  .custom-grid .card:hover img {
    transform: scale(1.05);
  }
  .custom-grid .card .content {
    padding: 1.5rem;
  }
  .custom-grid .card h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .custom-grid .card p {
    font-size: 1rem;
    color: #666;
    margin-bottom: 1rem;
  }
  .custom-grid .card button {
    background: #000;
    color: #fff;
    padding: 0.6rem 1.5rem;
    border: none;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s ease-in-out;
  }
  .custom-grid .card button:hover {
    transform: scale(1.05);
  }
</style>

<section class="custom-grid">
  <h2>Featured Products</h2>
  <div class="grid">
    {% for block in section.blocks %}
      {% if block.settings.product != blank %}
        {% assign product = all_products[block.settings.product] %}
        <div class="card">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title }}">
            <div class="content">
              <h3>{{ product.title }}</h3>
              <p>{{ product.price | money }}</p>
              <button>View</button>
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>
