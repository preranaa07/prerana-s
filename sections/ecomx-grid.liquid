{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Grid",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}

<section class="custom-grid max-w-7xl mx-auto px-6 py-16">
  <h2 class="text-3xl font-bold text-center mb-12">Featured Products</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for block in section.blocks %}
      {% if block.settings.product != blank %}
        {% assign product = all_products[block.settings.product] %}
        <div class="group border rounded-2xl overflow-hidden shadow hover:shadow-xl transition-shadow">
          <a href="{{ product.url }}">
            <div class="aspect-square overflow-hidden">
              <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform">
            </div>
            <div class="p-4 text-center">
              <h3 class="font-semibold text-lg mb-2">{{ product.title }}</h3>
              <p class="text-gray-600 mb-2">{{ product.price | money }}</p>
              <button class="bg-black text-white py-2 px-4 rounded-full hover:scale-105 transition-transform">View</button>
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>
