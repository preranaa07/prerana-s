<style>
  .custom-grid {
    padding: 4rem 2rem;
  }
  .custom-grid h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }
  .grid-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
  }
  .grid-item {
    position: relative;
    overflow: hidden;
  }
  .grid-item img {
    width: 100%;
    height: auto;
    display: block;
  }
  .grid-item .hotspot {
    position: absolute;
    top: 15px;
    right: 15px;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background: white;
    color: black;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    transition: transform 0.2s ease-in-out;
  }
  .grid-item .hotspot:hover {
    transform: scale(1.1);
  }
</style>

<section class="custom-grid">
  <h2>{{ section.settings.grid_title }}</h2>

  <div class="grid-gallery">
    {% for block in section.blocks %}
      <div class="grid-item">
        <img src="{{ block.settings.image | img_url: '800x' }}" alt="">
        <div class="hotspot">+</div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Grid",
  "settings": [
    {
      "type": "text",
      "id": "grid_title",
      "label": "Grid Title",
      "default": "Tisso vison in the wild"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [{ "name": "Custom Grid" }]
}
{% endschema %}
