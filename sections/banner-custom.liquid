{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Winter Collection" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Discover style & comfort" },
    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Shop Now" },
    { "type": "url", "id": "button_link", "label": "Button Link" }
  ]
}
{% endschema %}

<section class="custom-banner">
  <div class="banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-btn">{{ section.settings.button_text }}</a>
  </div>
</section>

<style>
.custom-banner { text-align:center; padding:60px 20px; background:#f9f9f9; }
.custom-banner h1 { font-size:2.5rem; margin-bottom:10px; }
.custom-banner p { font-size:1.2rem; margin-bottom:20px; }
.banner-btn { padding:12px 25px; background:black; color:white; text-decoration:none; border-radius:5px; transition:.25s; }
.banner-btn:hover { background:#333; transform:scale(1.05); }
@media(max-width:768px){ .custom-banner h1{ font-size:1.8rem; } .custom-banner p{ font-size:1rem; } }
</style>
