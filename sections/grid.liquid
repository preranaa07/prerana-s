{% schema %}
{
  "name": "Custom Grid",
  "settings": [
    { "type": "text", "id": "title", "label": "Grid Title", "default": "Our Features" }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Grid Item",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "textarea", "id": "description", "label": "Description" }
      ]
    }
  ],
  "max_blocks": 6
}
{% endschema %}

<section class="grid">
  <h2>{{ section.settings.title }}</h2>
  <div class="grid-container">
    {% for block in section.blocks %}
      <div class="grid-item">
        <h3>{{ block.settings.heading }}</h3>
        <p>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.grid {
  text-align: center;
  padding: 40px 20px;
}
.grid-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
}
.grid-item {
  background: #f5f5f5;
  padding: 20px;
  border-radius: 10px;
}
</style>
