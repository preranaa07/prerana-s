<section class="test-grid">
  <div class="grid-wrapper">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="grid-item">
          <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
          <button class="open-popup" data-handle="{{ product.handle }}">View Details</button>
        </div>
      {% else %}
        <div class="grid-item">
          <p>No product selected</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Popup -->
  <div id="product-popup" class="popup hidden">
    <div class="popup-content">
      <span class="close-popup">&times;</span>
      <div id="popup-details">
        <!-- Product details will load here -->
      </div>
    </div>
  </div>
</section>

<style>
.test-grid {
  padding: 60px 20px;
  text-align: center;
}
.grid-wrapper {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}
.grid-item {
  border: 1px solid #eee;
  padding: 15px;
  border-radius: 8px;
}
.grid-item img {
  max-width: 100%;
  border-radius: 4px;
}
button.open-popup, button.add-to-cart {
  margin-top: 10px;
  background: #d62828;
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 6px;
  cursor: pointer;
}
.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
}
.popup.hidden {
  display: none;
}
.popup-content {
  background: #fff;
  padding: 30px;
  border-radius: 8px;
  width: 400px;
  max-width: 90%;
  text-align: left;
}
.close-popup {
  float: right;
  font-size: 24px;
  cursor: pointer;
}
</style>

{% schema %}
{
  "name": "Test Grid",
  "blocks": [
    {
      "type": "product",
      "name": "Grid Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Test Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
