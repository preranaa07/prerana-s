<style>
  .custom-banner {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    color: #111;
    text-align: center;
    overflow: hidden; /* ensures no weird scrollbars */
  }

  /* Overlay so image is visible but text still readable */
  .custom-banner::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.2); /* adjust opacity if text too light/dark */
    z-index: 1;
  }

  .custom-banner img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .banner-content {
    max-width: 700px;
    position: relative;
    z-index: 2; /* keeps text above overlay + image */
  }

  .banner-content h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .banner-content p {
    font-size: 1.1rem;
    color: #333;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .banner-content a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #000;
    color: #fff;
    padding: 1rem 2rem;
    font-weight: 600;
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 1px;
    border-radius: 4px;
  }

  .banner-content a::after {
    content: "â†’";
    margin-left: 10px;
    font-size: 1.2rem;
    transition: transform 0.2s ease-in-out;
  }

  .banner-content a:hover::after {
    transform: translateX(5px);
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .custom-banner {
      padding: 2rem 1rem;
      min-height: 60vh;
    }
    .banner-content h1 {
      font-size: 2.2rem;
    }
    .banner-content p {
      font-size: 1rem;
    }
    .banner-content a {
      padding: 0.8rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>

<section class="custom-banner">
  {% if section.settings.bg_image != blank %}
    <img src="{{ section.settings.bg_image | img_url: '1600x' }}" alt="Banner Background">
  {% endif %}

  <div class="banner-content">
    <h1>{{ section.settings.headline }}</h1>
    <p>{{ section.settings.subtext }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>
