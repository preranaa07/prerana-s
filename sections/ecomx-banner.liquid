{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Background"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "banner_subheading",
      "label": "Subheading",
      "default": "Shop the latest trends today"
    },
    {
      "type": "url",
      "id": "banner_button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "banner_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ]
}
{% endschema %}

<section class="custom-banner relative w-full h-[90vh] flex items-center justify-center text-center overflow-hidden">
  {% if section.settings.banner_image %}
    <img src="{{ section.settings.banner_image | image_url: width: 1800 }}" 
         alt="Banner" 
         class="absolute inset-0 w-full h-full object-cover"/>
  {% endif %}

  <div class="absolute inset-0 bg-black/40"></div>

  <div class="relative z-10 max-w-3xl mx-auto px-6 text-white">
    <h1 class="text-5xl font-bold mb-4">{{ section.settings.banner_heading }}</h1>
    <p class="text-lg mb-6">{{ section.settings.banner_subheading }}</p>
    {% if section.settings.banner_button_text != blank %}
      <a href="{{ section.settings.banner_button_link }}" 
         class="inline-block bg-white text-black px-6 py-3 rounded-full text-lg font-semibold hover:bg-gray-200 transition">
        {{ section.settings.banner_button_text }}
      </a>
    {% endif %}
  </div>
</section>
