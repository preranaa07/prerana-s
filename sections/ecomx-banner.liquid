{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "NEW ARRIVAL"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Your Big Headline"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Sub copy explaining the offer. Fully editable from Customizer."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

<section class="custom-banner relative flex items-center justify-center min-h-[80vh] text-center">
  <div class="absolute inset-0">
    {% if section.settings.bg_image != blank %}
      <img src="{{ section.settings.bg_image | img_url: '1600x' }}" alt="Banner Background" class="w-full h-full object-cover">
    {% else %}
      <div class="w-full h-full bg-gray-100"></div>
    {% endif %}
  </div>

  <div class="relative z-10 max-w-2xl px-6 py-12 bg-white/70 rounded-2xl shadow-lg backdrop-blur">
    {% if section.settings.tagline != blank %}
      <p class="uppercase tracking-widest text-sm text-gray-600 mb-3">{{ section.settings.tagline }}</p>
    {% endif %}

    <h1 class="text-5xl font-extrabold text-gray-900 mb-4">{{ section.settings.headline }}</h1>

    {% if section.settings.subtext != blank %}
      <p class="text-lg text-gray-700 mb-6">{{ section.settings.subtext }}</p>
    {% endif %}

    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="inline-block bg-black text-white font-semibold py-3 px-8 rounded-full shadow-lg hover:scale-105 transition-transform">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>
