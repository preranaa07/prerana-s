<style>
  .custom-banner {
    position: relative;
    min-height: 85vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: center;
    overflow: hidden;
    color: #111; /* Black text */
    background: #fff;
  }

  .custom-banner img.bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  /* === Strips === */
  .banner-top,
  .banner-content,
  .banner-footer {
    position: relative;
    z-index: 2;
    padding: 1rem;
  }

  /* Top strip */
  .banner-top {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    font-size: 0.85rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    padding: 1rem;
    color: #444;
  }

  .banner-top img {
    height: 32px;
    width: auto;
  }

  /* Middle strip */
  .banner-content {
    max-width: 720px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .banner-content h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .banner-content p {
    font-size: 1.15rem;
    margin-bottom: 2rem;
    line-height: 1.6;
    color: #333;
  }

  .banner-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .banner-buttons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    font-weight: 600;
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 1px;
    border-radius: 6px;
    transition: all 0.25s ease;
  }

  .btn-primary {
    background: #111; /* Black */
    color: #fff;
  }

  .btn-primary:hover {
    background: #333;
  }

  .btn-secondary {
    background: #f6c344; /* Yellow Figma shade */
    color: #111;
  }

  .btn-secondary:hover {
    background: #e0ad20;
  }

  .banner-buttons a::after {
    content: "â†’";
    margin-left: 10px;
    font-size: 1.2rem;
    transition: transform 0.2s ease-in-out;
  }

  .banner-buttons a:hover::after {
    transform: translateX(6px);
  }

  /* Bottom strip */
  .banner-footer {
    font-size: 0.85rem;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: #666;
    padding: 1rem;
  }

  /* Mobile tweaks */
  @media (max-width: 768px) {
    .custom-banner {
      min-height: 65vh;
    }
    .banner-top {
      flex-direction: column;
      gap: 0.5rem;
      font-size: 0.75rem;
    }
    .banner-content {
      padding: 2rem 1.2rem;
    }
    .banner-content h1 {
      font-size: 2.2rem;
    }
    .banner-content p {
      font-size: 1rem;
    }
    .banner-buttons a {
      padding: 0.8rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>

<section class="custom-banner">
  {% if section.settings.bg_image != blank %}
    <img src="{{ section.settings.bg_image | img_url: '1600x' }}" alt="Banner Background" class="bg">
  {% endif %}

  <!-- Top strip -->
  <div class="banner-top">
    {% if section.settings.logo_image != blank %}
      <img src="{{ section.settings.logo_image | img_url: '200x' }}" alt="Banner Logo">
    {% endif %}
    {% if section.settings.top_tagline != blank %}
      <span>{{ section.settings.top_tagline }}</span>
    {% endif %}
  </div>

  <!-- Middle strip -->
  <div class="banner-content">
    <h1>{{ section.settings.headline }}</h1>
    <p>{{ section.settings.subtext }}</p>

    <div class="banner-buttons">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="btn-primary">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}

      {% if section.settings.secondary_button_text != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="btn-secondary">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  <!-- Bottom strip -->
  {% if section.settings.footer_text != blank %}
    <div class="banner-footer">{{ section.settings.footer_text }}</div>
  {% endif %}
</section>
