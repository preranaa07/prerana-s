{% comment %}
  sections/ecomx-banner.liquid
  New, from-scratch banner with editable texts and button animation.
{% endcomment %}

{{ 'ecomx-sections.css' | asset_url | stylesheet_tag }}
<script src="{{ 'ecomx-banner.js' | asset_url }}" defer></script>

<section class="ecomx-container">
  <div class="ecomx-banner">
    <div class="ecomx-banner__media">
      {% if section.settings.bg_image != blank %}
        <img src="{{ section.settings.bg_image | image_url: width: 1600 }}" alt="{{ section.settings.bg_image.alt | escape }}">
      {% else %}
        <div style="background:#0f172a; width:100%; height:100%;"></div>
      {% endif %}
    </div>
    <div class="ecomx-banner__overlay" aria-hidden="true"></div>

    <div class="ecomx-banner__content">
      {% if section.settings.eyebrow != blank %}
        <div class="ecomx-eyebrow">{{ section.settings.eyebrow }}</div>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h1 class="ecomx-headline">{{ section.settings.heading }}</h1>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="ecomx-subhead">{{ section.settings.subheading }}</p>
      {% endif %}

      <div class="ecomx-cta-row">
        {% if section.settings.cta_label != blank %}
          <a class="ecomx-btn" data-animate="bounce" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
        {% endif %}
        {% if section.settings.cta2_label != blank %}
          <a class="ecomx-btn ecomx-btn--ghost" data-animate="bounce" href="{{ section.settings.cta2_link }}">{{ section.settings.cta2_label }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "EcomX â€¢ Banner (Custom)",
  "settings": [
    { "type": "image_picker", "id": "bg_image", "label": "Background image" },
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "New Arrival" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Your Big Headline" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Sub copy explaining the offer. Fully editable from Customizer." },
    { "type": "text", "id": "cta_label", "label": "Primary CTA label", "default": "Shop now" },
    { "type": "url",  "id": "cta_link",  "label": "Primary CTA link" },
    { "type": "text", "id": "cta2_label", "label": "Secondary CTA label", "default": "Learn more" },
    { "type": "url",  "id": "cta2_link",  "label": "Secondary CTA link" }
  ],
  "presets": [{ "name": "Banner (EcomX)" }]
}
{% endschema %}
