<style>
  .custom-banner {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 4rem;
    color: #111;
  }
  .custom-banner img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }
  .banner-content {
    max-width: 600px;
  }
  .banner-content h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }
  .banner-content p {
    font-size: 1.1rem;
    color: #333;
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  .banner-content a {
    display: inline-flex;
    align-items: center;
    background: #000;
    color: #fff;
    padding: 1rem 2rem;
    font-weight: 600;
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 1px;
  }
  .banner-content a::after {
    content: "â†’";
    margin-left: 10px;
    font-size: 1.2rem;
    transition: transform 0.2s ease-in-out;
  }
  .banner-content a:hover::after {
    transform: translateX(5px);
  }
</style>

<section class="custom-banner">
  {% if section.settings.bg_image != blank %}
    <img src="{{ section.settings.bg_image | img_url: '1600x' }}" alt="Banner Background">
  {% endif %}

  <div class="banner-content">
    <h1>{{ section.settings.headline }}</h1>
    <p>{{ section.settings.subtext }}</p>
    <a href="{{ section.settings.button_link }}">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>
