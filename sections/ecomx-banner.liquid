<style>
  .custom-banner {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;
    overflow: hidden;
  }

  .custom-banner::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    z-index: 1;
  }

  .custom-banner img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .banner-content {
    max-width: 700px;
    position: relative;
    z-index: 2;
    color: #fff;
  }

  .banner-content h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .banner-content p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .banner-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .banner-buttons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    font-weight: 600;
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 1px;
    border-radius: 4px;
    transition: all 0.25s ease;
  }

  .btn-primary {
    background: #fff;
    color: #000;
    border: 2px solid #fff;
  }

  .btn-primary:hover {
    background: transparent;
    color: #fff;
  }

  .btn-secondary {
    background: transparent;
    color: #fff;
    border: 2px solid #fff;
  }

  .btn-secondary:hover {
    background: #fff;
    color: #000;
  }

  .banner-buttons a::after {
    content: "â†’";
    margin-left: 10px;
    font-size: 1.2rem;
    transition: transform 0.2s ease-in-out;
  }

  .banner-buttons a:hover::after {
    transform: translateX(5px);
  }

  .banner-footer {
    position: relative;
    z-index: 2;
    margin-top: 2rem;
    padding: 0.5rem 1rem;
    background: rgba(0,0,0,0.5);
    font-size: 0.9rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: #fff;
  }

  @media (max-width: 768px) {
    .custom-banner {
      padding: 2rem 1rem;
      min-height: 60vh;
    }
    .banner-content h1 {
      font-size: 2.2rem;
    }
    .banner-content p {
      font-size: 1rem;
    }
    .banner-buttons a {
      padding: 0.8rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>

<section class="custom-banner">
  {% if section.settings.bg_image != blank %}
    <img src="{{ section.settings.bg_image | img_url: '1600x' }}" alt="Banner Background">
  {% endif %}

  <div class="banner-content">
    <h1>{{ section.settings.headline }}</h1>
    <p>{{ section.settings.subtext }}</p>

    <div class="banner-buttons">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="btn-primary">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}

      {% if section.settings.secondary_button_text != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="btn-secondary">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>

    {% if section.settings.footer_text != blank %}
      <div class="banner-footer">{{ section.settings.footer_text }}</div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Choose Gift"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
