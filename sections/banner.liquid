{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "image_picker", "id": "banner_image", "label": "Banner Image" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Welcome to My Store" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Best products for you" },
    { "type": "url", "id": "button_link", "label": "Button Link" },
    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Shop Now" }
  ]
}
{% endschema %}

<section class="banner">
  <img src="{{ section.settings.banner_image | image_url }}" alt="Banner">
  <div class="banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
  </div>
</section>

<style>
.banner {
  position: relative;
  text-align: center;
  color: white;
}
.banner img {
  width: 100%;
  height: auto;
}
.banner-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.btn {
  background: black;
  color: white;
  padding: 10px 20px;
  text-decoration: none;
}
</style>
