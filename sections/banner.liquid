{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Banner Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Your banner subheading goes here"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="custom-banner relative w-full overflow-hidden">
  {% if section.settings.banner_image %}
    <img src="{{ section.settings.banner_image | img_url: 'master' }}" 
         alt="{{ section.settings.heading }}" 
         class="w-full h-auto object-cover">
  {% endif %}
  <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-4 md:px-10">
    <h1 class="text-3xl md:text-5xl font-bold text-white drop-shadow-lg">{{ section.settings.heading }}</h1>
    <p class="mt-2 text-lg md:text-2xl text-white drop-shadow">{{ section.settings.subheading }}</p>
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" 
         class="mt-4 inline-block bg-primary hover:bg-primary-dark text-white font-semibold py-3 px-6 rounded transition-all">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
.custom-banner {
  min-height: 400px;
}
@media (min-width: 768px) {
  .custom-banner {
    min-height: 600px;
  }
}
</style>
