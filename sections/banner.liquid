{% comment %}
  Custom Banner (hero) — editable text + buttons + bg image with subtle animation
{% endcomment %}
<section class="ee-banner" style="--overlay: {{ section.settings.overlay | divided_by: 100.0 }};">
  {% if section.settings.bg_image != blank %}
    <div class="ee-banner__bg" style="background-image:url({{ section.settings.bg_image | image_url: width: 2400 }});"></div>
  {% endif %}
  <div class="ee-banner__shade"></div>

  <div class="ee-banner__inner page-width">
    <h1 class="ee-banner__title">{{ section.settings.heading }}</h1>
    <p class="ee-banner__subtitle">{{ section.settings.subheading }}</p>

    <div class="ee-banner__actions">
      {% if section.settings.primary_label != blank %}
        <a class="ee-btn ee-btn--primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
      {% endif %}
      {% if section.settings.secondary_label != blank %}
        <a class="ee-btn ee-btn--ghost" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.ee-banner{position:relative; overflow:hidden; padding: clamp(56px, 12vw, 120px) 0; color:#111;}
.ee-banner__bg{position:absolute; inset:0; background-size:cover; background-position:center; transform:scale(1.03); transition:transform .6s ease;}
.ee-banner:hover .ee-banner__bg{transform:scale(1.06);}
.ee-banner__shade{position:absolute; inset:0; background:linear-gradient(180deg, rgba(255,255,255,calc(var(--overlay, .3))) 0%, rgba(255,255,255,calc(var(--overlay, .3))) 100%);}
.ee-banner__inner{position:relative; z-index:1; max-width:900px; text-align:center; margin-inline:auto; padding:0 16px;}
.ee-banner__title{font-size: clamp(28px, 5vw, 56px); line-height:1.1; margin:0 0 12px;}
.ee-banner__subtitle{font-size: clamp(16px, 2.2vw, 20px); margin:0 0 28px; color:#333;}
.ee-banner__actions{display:flex; gap:12px; justify-content:center; flex-wrap:wrap;}
.ee-btn{display:inline-flex; align-items:center; justify-content:center; padding:12px 22px; border-radius:8px; text-decoration:none; transition:transform .2s ease, box-shadow .2s ease, background .2s ease, color .2s ease; border:1px solid #111;}
.ee-btn:focus{outline:none; box-shadow:0 0 0 3px rgba(17,17,17,.2);}
.ee-btn:hover{transform:translateY(-2px);}
.ee-btn--primary{background:#111; color:#fff;}
.ee-btn--primary:hover{background:#222;}
.ee-btn--ghost{background:#fff; color:#111;}
.ee-btn--ghost:hover{background:#f6f6f6;}
@media (max-width: 640px){ .ee-banner{padding:56px 0;} }
</style>

{% schema %}
{
  "name": "EE — Banner (Custom)",
  "settings": [
    { "type":"image_picker", "id":"bg_image", "label":"Background image" },
    { "type":"range", "id":"overlay", "min":0, "max":80, "step":5, "unit":"%", "label":"White overlay strength", "default":30 },
    { "type":"text", "id":"heading", "label":"Heading", "default":"Welcome to My Store" },
    { "type":"text", "id":"subheading", "label":"Subheading", "default":"Browse our latest products" },
    { "type":"text", "id":"primary_label", "label":"Primary button label", "default":"Shop Now" },
    { "type":"url",  "id":"primary_link", "label":"Primary button link" },
    { "type":"text", "id":"secondary_label", "label":"Secondary button label", "default":"" },
    { "type":"url",  "id":"secondary_link", "label":"Secondary button link" }
  ],
  "presets": [{ "name":"EE — Banner (Custom)" }]
}
{% endschema %}
